#!/usr/bin/env bash

set -e

cd

#bash
if [ -f .bash_profile -a ! -L .bash_profile ]; then
	mv -f  .bash_profile .bash_profile.bak
    echo "‚ö†Ô∏è  .bash_profile already exists. Backed up to .bash_profile.bak"
fi
ln -sf dotfiles/bash/bash_profile .bash_profile
echo "‚úÖ ~/.bash_profile üëâ ~/dotfiles/bash/bash_profile"

if [ -f .bashrc -a ! -L .bashrc ]; then
    mv -f  .bashrc .bashrc.bak
    echo "‚ö†Ô∏è  .bashrc already exists. Backed up to .bashrc.bak"
fi
ln -sf dotfiles/bash/bashrc .bashrc
echo "‚úÖ ~/.bashrc üëâ ~/dotfiles/bash/bashrc"

#vim
if [ -d .vim -a ! -L .vim ]; then
	mv -f .vim .vim.bak
fi
if [ ! -L .vim ]; then
    ln -sf dotfiles/vim .vim
fi
echo "‚úÖ ~/.vim üëâ ~/dotfiles/vim"

#git
if [ -f .gitconfig -a ! -L .gitconfig ]; then
	mv -f .gitconfig .gitconfig.bak
    echo "‚ö†Ô∏è  .gitconfig already exists. Backed up to .gitconfig.bak"
fi
ln -sf dotfiles/git/gitconfig .gitconfig
echo "‚úÖ ~/.gitconfig üëâ ~/dotfiles/git/gitconfig"

if [ ! -f ".vim/autoload/plug.vim" ]; then
    echo "vim-plug not found. Download now? (y/n)"
    read -r input
    if [[ "$input" =~ ^[Yy]$ ]]; then
        mkdir -p ~/.vim/autoload
        curl -fLo ".vim/autoload/plug.vim" \
            https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim ||
            echo "‚ö†Ô∏è  Failed to download vim-plug"
    fi
fi

if [ -f ".vim/autoload/plug.vim" ]; then
    echo "‚úÖ vim-plug (.vim/autoload/plug.vim) installed. Run :PlugInstall in vim."
else
    echo "‚ö†Ô∏è  vim-plug not installed. Plugin management will not work."
fi

